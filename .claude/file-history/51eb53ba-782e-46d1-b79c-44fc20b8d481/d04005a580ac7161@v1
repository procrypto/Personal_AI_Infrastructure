// LLM Service for term expansion
// Supports OpenAI and Anthropic APIs with persistent caching

export interface LLMConfig {
    provider: 'openai' | 'anthropic';
    apiKey: string;
}

export interface ExpansionCacheEntry {
    expansions: string[];
    timestamp: number;
}

export interface ExpansionCache {
    [term: string]: ExpansionCacheEntry;
}

// Storage keys
const CONFIG_KEY = 'tg-ripper-llm-config';
const CACHE_KEY = 'tg-ripper-expansion-cache';

// Rate limiting
const RATE_LIMIT_WINDOW_MS = 60000; // 1 minute
const MAX_REQUESTS_PER_WINDOW = 10;
let requestTimestamps: number[] = [];

// Config management
export function getLLMConfig(): LLMConfig | null {
    try {
        const stored = localStorage.getItem(CONFIG_KEY);
        if (!stored) return null;
        return JSON.parse(stored) as LLMConfig;
    } catch {
        return null;
    }
}

export function setLLMConfig(config: LLMConfig): void {
    localStorage.setItem(CONFIG_KEY, JSON.stringify(config));
}

export function clearLLMConfig(): void {
    localStorage.removeItem(CONFIG_KEY);
}

// Cache management
function getCache(): ExpansionCache {
    try {
        const stored = localStorage.getItem(CACHE_KEY);
        if (!stored) return {};
        return JSON.parse(stored) as ExpansionCache;
    } catch {
        return {};
    }
}

function setCache(cache: ExpansionCache): void {
    localStorage.setItem(CACHE_KEY, JSON.stringify(cache));
}

export function getCachedExpansion(term: string): string[] | null {
    const cache = getCache();
    const normalizedTerm = term.toLowerCase().trim();
    const entry = cache[normalizedTerm];
    if (!entry) return null;
    return entry.expansions;
}

export function setCachedExpansion(term: string, expansions: string[]): void {
    const cache = getCache();
    const normalizedTerm = term.toLowerCase().trim();
    cache[normalizedTerm] = {
        expansions,
        timestamp: Date.now(),
    };
    setCache(cache);
}

export function clearExpansionCache(): void {
    localStorage.removeItem(CACHE_KEY);
}

export function getExpansionCacheStats(): { termCount: number; oldestTimestamp: number | null } {
    const cache = getCache();
    const entries = Object.values(cache);
    if (entries.length === 0) {
        return { termCount: 0, oldestTimestamp: null };
    }
    const oldest = Math.min(...entries.map(e => e.timestamp));
    return { termCount: entries.length, oldestTimestamp: oldest };
}

// Rate limiting
function checkRateLimit(): boolean {
    const now = Date.now();
    // Remove timestamps outside the window
    requestTimestamps = requestTimestamps.filter(ts => now - ts < RATE_LIMIT_WINDOW_MS);
    return requestTimestamps.length < MAX_REQUESTS_PER_WINDOW;
}

function recordRequest(): void {
    requestTimestamps.push(Date.now());
}

// LLM API calls
const EXPANSION_PROMPT = (term: string) => `Given the search term "${term}", provide 5-10 synonyms and related terms that someone might use when searching chat messages about this topic.

Return ONLY a JSON array of strings, no explanation or markdown.
Example: ["term1", "term2", "term3"]`;

async function callOpenAI(term: string, apiKey: string): Promise<string[]> {
    const response = await fetch('https://api.openai.com/v1/chat/completions', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${apiKey}`,
        },
        body: JSON.stringify({
            model: 'gpt-4o-mini',
            messages: [
                {
                    role: 'user',
                    content: EXPANSION_PROMPT(term),
                },
            ],
            temperature: 0.3,
            max_tokens: 200,
        }),
    });

    if (!response.ok) {
        const error = await response.text();
        throw new Error(`OpenAI API error: ${response.status} - ${error}`);
    }

    const data = await response.json();
    const content = data.choices?.[0]?.message?.content;
    if (!content) {
        throw new Error('No content in OpenAI response');
    }

    return parseExpansionResponse(content);
}

async function callAnthropic(term: string, apiKey: string): Promise<string[]> {
    const response = await fetch('https://api.anthropic.com/v1/messages', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'x-api-key': apiKey,
            'anthropic-version': '2023-06-01',
            'anthropic-dangerous-direct-browser-access': 'true',
        },
        body: JSON.stringify({
            model: 'claude-3-haiku-20240307',
            max_tokens: 200,
            messages: [
                {
                    role: 'user',
                    content: EXPANSION_PROMPT(term),
                },
            ],
        }),
    });

    if (!response.ok) {
        const error = await response.text();
        throw new Error(`Anthropic API error: ${response.status} - ${error}`);
    }

    const data = await response.json();
    const content = data.content?.[0]?.text;
    if (!content) {
        throw new Error('No content in Anthropic response');
    }

    return parseExpansionResponse(content);
}

function parseExpansionResponse(content: string): string[] {
    // Try to extract JSON array from response
    const trimmed = content.trim();

    // Try direct JSON parse first
    try {
        const parsed = JSON.parse(trimmed);
        if (Array.isArray(parsed) && parsed.every(item => typeof item === 'string')) {
            return parsed.map(s => s.toLowerCase().trim()).filter(s => s.length > 0);
        }
    } catch {
        // Not valid JSON, try to extract array
    }

    // Try to find JSON array in the response
    const arrayMatch = trimmed.match(/\[[\s\S]*?\]/);
    if (arrayMatch) {
        try {
            const parsed = JSON.parse(arrayMatch[0]);
            if (Array.isArray(parsed) && parsed.every(item => typeof item === 'string')) {
                return parsed.map(s => s.toLowerCase().trim()).filter(s => s.length > 0);
            }
        } catch {
            // Failed to parse extracted array
        }
    }

    // Fallback: try to parse comma-separated terms
    const terms = trimmed
        .replace(/[\[\]"']/g, '')
        .split(',')
        .map(s => s.toLowerCase().trim())
        .filter(s => s.length > 0 && s.length < 50);

    if (terms.length > 0) {
        return terms;
    }

    throw new Error('Failed to parse expansion response');
}

export async function expandTermWithLLM(
    term: string,
    config: LLMConfig
): Promise<string[]> {
    // Check rate limit
    if (!checkRateLimit()) {
        console.warn('LLM rate limit reached, skipping expansion');
        return [];
    }

    recordRequest();

    if (config.provider === 'openai') {
        return callOpenAI(term, config.apiKey);
    } else {
        return callAnthropic(term, config.apiKey);
    }
}

// Test API connection
export async function testLLMConnection(config: LLMConfig): Promise<{ success: boolean; error?: string }> {
    try {
        const result = await expandTermWithLLM('test', config);
        if (result.length > 0) {
            return { success: true };
        }
        return { success: false, error: 'No expansions returned' };
    } catch (error) {
        return { success: false, error: error instanceof Error ? error.message : 'Unknown error' };
    }
}
