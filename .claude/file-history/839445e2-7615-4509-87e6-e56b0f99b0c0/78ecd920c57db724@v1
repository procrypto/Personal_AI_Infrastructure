/**
 * Slack Integration Types
 *
 * Type definitions for Slack event handling and message capture.
 */

/**
 * Configuration for detecting Linear bot messages.
 */
export interface LinearBotConfig {
  /** Bot ID of Linear's Slack integration (from Slack admin) */
  botId: string;
  /** Channel IDs to watch for Linear messages (optional filter) */
  watchChannels?: string[];
}

/**
 * A captured Linear message from Slack.
 * This extends the LinearMessage type with capture metadata.
 */
export interface CapturedLinearMessage {
  /** Slack message timestamp (unique ID) */
  slackMessageTs: string;
  /** Slack channel ID where message was posted */
  slackChannelId: string;
  /** Extracted Linear issue ID (e.g., 'ABC-123') */
  linearIssueId: string;
  /** ISO timestamp when message was captured */
  capturedAt: string;
  /** Original message text (for debugging) */
  messageText?: string;
}
