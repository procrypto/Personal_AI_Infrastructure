# --- BONKbot Mint Query Helpers ---
function query_mint_stats() {
  local mint="$1"
  curl -s \
    -H "Content-Type: application/json" \
    --user "$key_id:$key_secret" \
    "https://console-api.clickhouse.cloud/.api/query-endpoints/fefc8f69-a12d-4f9e-a09d-e7f132099e40/run?format=JSONEachRow&param_param_mint=$mint" \
    | jq .
}

function query_top_holders() {
  local mint="$1"
  curl -s \
    -H "Content-Type: application/json" \
    --user "$key_id:$key_secret" \
    "https://console-api.clickhouse.cloud/.api/query-endpoints/b19b72dd-b188-4d2a-9809-67c91a06e961/run?format=JSONEachRow&param_param_mint=$mint" \
    | jq .
}

